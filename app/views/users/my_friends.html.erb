<h1>My Friends</h1>

<div class="search-area">
  <h3> Search for Friends </h3>
  <%= form_tag search_friends_path, remote: true, method: :get do %>
    <div class="form-group row" >
      <div class="col-sm-9">
        <%= text_field_tag :search_string, params[:search_string], placeholder: "Friend email", autofocus: true, class: "form-control form-control-large" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
        <%= fa_icon 'search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="friend-results"></div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>
      